@using RealEstateManagementSystem.Models
@model RealEstatePropertyDto

@{
    ViewData["Title"] = "Edit property";
}

<div class="container">
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <h1>Edit Property</h1>

        <div class="form-group">
            <label for="name">Id</label>
            <input type="text" id="name" name="name" readonly value="@ViewData["id"]">
        </div>
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" maxlength="100" asp-for="Name" required>
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" name="description" maxlength="200" asp-for="Description" required></textarea>
        </div>

        <div class="form-group">
            <label for="type">Type</label>
            <select id="type" name="type" asp-for="Type" required>
                <option value="">Select Type</option>
                <option value="House">House</option>
                <option value="Apartment">Apartment</option>
                <option value="Shop">Shop</option>
                <option value="Villa">Villa</option>
            </select>
        </div>

        <div class="form-group">
            <label for="price">Price</label>
            <input type="number" id="price" name="price" step="0.01"asp-for="Price"  required>
        </div>

        <div class="form-group">
            <img src="/images/@ViewData["Image"]" width="300px">
        </div>

        <div class="form-group">
            <label for="imageFile">Image</label>
            <input type="file" id="imageFile" name="imageFile" asp-for="ImageFile">
        </div>

        <div class="form-group">
            <label for="createdDate">Created Date</label>
            <input readonly value="@ViewData["Created Date"]">
        </div>

        <div class="form-group">
            <button type="submit">Submit</button>
        </div>
    </form>
</div>
